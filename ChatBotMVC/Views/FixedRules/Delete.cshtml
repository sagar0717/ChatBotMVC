@using DialogMVC.Data
@model Fixedrule

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fixed rule</title>
</head>
<body>
    <h2>Delete Fixed Rule</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Query)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Query)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Response)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Response)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.RuleId)
            <input type="submit" value="Delete" class="btn btn-default" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</body>
</html>