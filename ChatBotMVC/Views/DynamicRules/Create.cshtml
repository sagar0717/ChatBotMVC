@using DialogMVC.Data
@using ChatBotMVC.ViewModels
@model DyanamicRule
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Dynamic Rule</title>
</head>
<body>
    <h1>Add a Dynamic Rule</h1>
    @using (Html.BeginForm())
    {
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p class="text-danger">
            @ViewBag.Error
        </p>
        <div class="form-group">
            @Html.LabelFor(x => x.Query, "Query", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(model => model.Query, new { @class = "form-control", @type = "Text" })
                @Html.ValidationMessageFor(model => model.Query, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Response, "Response", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(x => x.Response, new { @class = "form-control", @type = "Text" })
                @Html.ValidationMessageFor(x => x.Response, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Keyword, "Keyword", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">

                @Html.DropDownListFor(x => x.Keyword, (IEnumerable<SelectListItem>)ViewBag.TopicInformationList, "Please Select", htmlAttributes: new { @class = "form-control", @text = "Dropdown" })
                @Html.ValidationMessageFor(x => x.Keyword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Match, "Match", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">

                @Html.DropDownListFor(x => x.Match, (IEnumerable<SelectListItem>)ViewBag.TopicInformationList, "Please Select", htmlAttributes: new { @class = "form-control", @text = "Dropdown" })
                @Html.ValidationMessageFor(x => x.Match, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">    
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>

        </div>
        </div>
    }

</body>
</html>
